<div class="something">

  <div class="welcome"><h1>Playlists</p></div>

  <div class="link_tabs">

  <%= link_to "Find Playlists", playlists_find_path, :class => 'button small', :id => 'find-playlist' %>
  <%= link_to "New Playlist", new_playlist_path, :class => 'button small', :id => 'new-playlist' %>
</div>

  <div class="random_playlist" id='playlist'>
   <p class="random">Random Songs Near Me</p></br>
      
        <% if find_random_local_songs.class.name == "Array" %>
          <% find_random_local_songs.each do |song| %>
            <%= render partial: 'songs/mini_groove_song_card', locals: {playlist: song.playlist, track: song, title: song.title, artist: song.artist, url: groove_session.get_song_url_by_id(song.link), coverart: song.coverart} %>
          <% end %>
        <% else %>
          <p class="result"><%= find_random_local_songs %><p>
        <% end %>
  </div>


  <div class="user_playlists">
     <h4>My Playlists:</h4>
    <% @playlists.each do |playlist| %>
     <span><%= link_to playlist.title, playlist_path(playlist), :class => 'my-playlists' %></span></br>
    <% end %>
  </div>


</div>


