<div class="now_playing">
	<p class="welcome"><%= @playlist.title %></p>
	<br />
</div>
<div class="playlist">
	<ul id="playlist">
		<% @playlist.songs.each do |song| %>
			<%= render partial: 'songs/mini_groove_song_card', locals: {track: song, title: song.title, artist: song.artist, url: @client.get_song_url_by_id(song.link), coverart: song.coverart}%>
		<% end %>
	</ul>

  <%= link_to 'Delete Playlist', playlist_path(@playlist),
          method: :delete,
          data: { confirm: "Are you sure?" }, :class => "button tiny"%>
  <a class="button tiny" href="/playlists/<%=@playlist.id%>/songs/new">Add a Song</a>
</div>
<audio id="audio" preload="auto" tabindex="0" controls="" type="audio/mpeg"></audio>

