<div class="playlist">
	<h1><%= @playlist.title %></h1>
	<img src="<%= @picture %>"/>
	<a href="/playlists/<%=@playlist.id%>/songs/new">Add a Song</a>

	<ul id="playlist">
		<% @playlist.songs.each do |song| %>
			<%= render partial: 'songs/mini_groove_song_card', locals: {title: song.title, artist: song.artist, url: @client.get_song_url_by_id(song.link), coverart: song.coverart}%>

      <%= link_to "Delete Song", [@playlist, song], method: :delete %>
		<% end %>
	</ul>
</div>
<audio id="audio" preload="auto" tabindex="0" controls="" type="audio/mpeg"></audio>

